<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ECC71" >

    <TextView
        android:id="@+id/text00reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:padding="10dp"
        android:text="gChat REGISTRATION"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etr_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etr_address"
        android:layout_below="@+id/etr_address"
        android:layout_marginTop="24dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/bt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etr_password"
        android:layout_alignRight="@+id/etr_password"
        android:layout_below="@+id/etr_password"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="REGISTER"
        android:textColor="#fff"
        android:background="#1D8348"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etr_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etr_email"
        android:layout_below="@+id/etr_email"
        android:layout_marginTop="24dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etr_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etr_phone"
        android:layout_below="@+id/etr_phone"
        android:layout_marginTop="24dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Email "
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text00reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etr_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etr_name"
        android:layout_below="@+id/etr_name"
        android:layout_marginTop="24dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="10dp" >

        <requestFocus />
    </EditText>

</RelativeLayout>
