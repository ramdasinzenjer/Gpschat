<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ECC71" >

    <TextView
        android:id="@+id/textViewafrnds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="35dp"
        android:text="My Friends :"
        android:textColor="#ffffff"
        android:textStyle="bold" 
        android:padding="10dp"
        android:textSize="20dp"/>

    <ListView
        android:id="@+id/listViewaprusr"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/textViewafrnds"
        android:layout_below="@+id/textViewafrnds"
        android:layout_marginTop="10dp" >
    </ListView>

    <TextView
        android:id="@+id/textViewruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewaprusr"
        android:layout_below="@+id/listViewaprusr"
        android:layout_marginTop="36dp"
        android:padding="10dp"
        android:text="All Registered Users :"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewrusr"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/textViewruser"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewruser"
        android:layout_marginTop="11dp" >

    </ListView>

</RelativeLayout>